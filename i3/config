# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar -t
    font pango:Hack, FontAwesome 12
    # strip_workspace_numbers yes
    separator_symbol "■■"
    tray_padding 0

    colors {
        # Whole color settings
        background $base00
        statusline $base04
        separator  $base00

        # Type             border  bg      text
        focused_workspace  $base0D $base0D $white
        active_workspace   $base0D $base00 $base02
        inactive_workspace $base01 $base00 $base02
        urgent_workspace   $base09 $base08 $white
    }
    position bottom
    status_command py3status --config ~/.i3/i3status.conf
}

# Colors
# Type            border  bg      text    indicator
client.focused    $base0D $base0D $white $base0B
client.unfocused  $base03 $base02 $white
client.urgent     $base09 $base08 $white

